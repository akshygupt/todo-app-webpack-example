{
  "name": "todo-app-example",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@babel/core": "^7.8.3",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/preset-react": "^7.8.3",
    "@loadable/component": "^5.12.0",
    "babel-loader": "^8.0.6",
    "babel-polyfill": "^6.26.0",
    "css-loader": "^3.4.2",
    "email-validator": "^2.0.4",
    "formik": "^2.1.2",
    "html-webpack-plugin": "^3.2.0",
    "js-cookie": "^2.2.1",
    "mini-css-extract-plugin": "^0.9.0",
    "paths": "^0.1.1",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-router-dom": "^5.1.2",
    "style-loader": "^1.1.3",
    "webpack": "4.41.2",
    "webpack-cli": "^3.3.10",
    "webpack-dev-server": "^3.9.0",
    "yup": "^0.28.0"
  },
  "scripts": {
    "analyze": "source-map-explorer dist/*.js",
    "clean": "rm -rf dist/",
    "start": "webpack-dev-server --config webpack-config/basic/webpack.config.js --mode development --inline --hot",
    "build-basic": "npm run clean && webpack --mode production --config webpack-config/basic/webpack.config.js",
    "build-code-split-entry": "npm run clean && webpack --mode production --config webpack-config/code-splitting/webpack.entry-point.config.js",
    "build-code-split-chunks": "npm run clean && webpack --mode production --config webpack-config/code-splitting/webpack.splitchunk.config.js",
    "build-code-split-import": "npm run clean && webpack --mode production --config webpack-config/code-splitting/webpack.splitchunk.import.config.js",
    "start-dev": "webpack-dev-server --env.mode development --config webpack-config/code-splitting/webpack.splitchunk.import.config.js --inline --hot",
    "serve": "serve -s ./dist/"
  }
}
